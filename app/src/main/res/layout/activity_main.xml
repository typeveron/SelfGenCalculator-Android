<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#E63C3C"
        android:ems="13"
        android:gravity="center"
        android:padding="5dp"
        android:text="Math.Quiz"
        android:textColor="@android:color/black"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/editTextA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"

        android:ems="13"
        android:inputType="textPersonName"
        android:padding="25dp"
        android:singleLine="true"
        android:text="0"

        android:textSize="25dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:ems="1"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="25dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="253dp"
        android:layout_below="@id/editText2"
        android:layout_marginTop="56dp"
        android:columnCount="3"
        android:rowCount="6">

        <Button
            android:id="@+id/button1"

            style="@style/Widget.AppCompat.Button"

            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="10dp"

            android:background="@android:color/holo_green_light"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@android:color/holo_green_light"

            android:text="2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@android:color/holo_green_light"

            android:text="3" />

        <Button
            android:id="@+id/button4"
            android:layout_width="130dp"
            android:layout_height="wrap_content"

            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:background="@android:color/holo_green_light"

            android:text="4" />

        <Button
            android:id="@+id/button5"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@android:color/holo_green_light"

            android:text="5" />

        <Button
            android:id="@+id/button6"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@android:color/holo_green_light"

            android:text="6" />

        <Button
            android:id="@+id/button7"
            android:layout_width="130dp"
            android:layout_height="wrap_content"

            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:background="@android:color/holo_green_light"

            android:text="7" />

        <Button
            android:id="@+id/button8"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@android:color/holo_green_light"

            android:text="8" />

        <Button
            android:id="@+id/button9"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@android:color/holo_green_light"

            android:text="9" />

        <Button
            android:id="@+id/buttonPer"
            android:layout_width="130dp"
            android:layout_height="wrap_content"

            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:background="@android:color/holo_green_light"

            android:text="." />

        <Button
            android:id="@+id/button0"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:background="@android:color/holo_green_light"

            android:text="0" />

        <Button
            android:id="@+id/buttonHyp"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:background="@android:color/holo_green_light"

            android:text="-" />

        <Button
            android:id="@+id/buttonGen"
            android:layout_width="130dp"
            android:layout_height="wrap_content"

            android:layout_row="4"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:background="@android:color/holo_green_light"

            android:text="Generate" />

        <Button
            android:id="@+id/buttonVal"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:background="@android:color/holo_green_light"

            android:text="Validate" />

        <Button
            android:id="@+id/buttonCle"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="2"
            android:background="@android:color/holo_green_light"

            android:text="Clear" />


    </GridLayout>

    <Button
        android:id="@+id/buttonScore"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_green_dark"
        style="?android:attr/borderlessButtonStyle"
        android:text="Score" />

    <Button
        android:id="@+id/buttonFin"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/buttonScore"
        android:background="@android:color/holo_green_dark"
        style="?android:attr/borderlessButtonStyle"
        android:text="Finish" />


</RelativeLayout>